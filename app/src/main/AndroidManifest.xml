<?xml version="1.0" encoding="utf-8"?>
<manifest
    package="pl.edu.uj.synchrotron.restfuljive"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.INTERNET"/>
    <application
        android:name="android.support.multidex.MultiDexApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name=".SortedList"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".SetHostActivity"
            android:label="@string/title_activity_set_host">
        </activity>
        <activity
            android:name=".FullListActivity"
            android:label="@string/title_activity_full_list">
        </activity>
        <activity
            android:name=".ServerList"
            android:label="@string/title_activity_server_list">
        </activity>
        <activity
            android:name=".PropertiesActivity"
            android:label="@string/title_activity_properties">
        </activity>
        <activity
            android:name=".AttributesActivity"
            android:label="@string/title_activity_attributes">
        </activity>
        <activity
            android:name=".DevicePanelActivity"
            android:label="@string/title_activity_device_panel">
        </activity>
        <activity
            android:name=".PlotActivity"
            android:label="@string/title_activity_plot">
        </activity>
        <activity
            android:name=".ImagePlotActivity"
            android:label="@string/title_activity_image_plot">
        </activity>
    </application>

</manifest>
